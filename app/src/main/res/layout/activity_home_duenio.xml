<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeDuenio"
    android:background="@color/fondo"
    android:padding="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linearl1x"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        >

        <ImageView
            android:id="@+id/imageViewx"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/logosinfondo" />

        <ImageView
            android:id="@+id/imageView2x"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_search"
            android:layout_weight="0.15"
            android:background="@drawable/orangebtnradius"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearl3x"


        android:orientation="horizontal" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerEventx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearl1x"
        android:layout_marginTop="140dp"
        android:paddingTop="10dp"
        android:paddingBottom="30dp" />

    <LinearLayout
        android:id="@+id/floating_baryx"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/linearl1x"
        android:layout_alignBottom="@+id/floating_barx"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="516dp"
        android:background="@drawable/orangebtnradius"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mis Eventos"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/floating_barx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/orangebtnradius"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/textviewCrearEvento"
            android:paddingHorizontal="20dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:drawablePadding="4dp"
            android:text="Crear Evento"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@color/white"

            android:textStyle="bold" />


        <ImageView
            android:id="@+id/notificationbtnx"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_notification" />

        <ImageView
            android:id="@+id/userbtnx"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_user" />

    </LinearLayout>


</RelativeLayout>